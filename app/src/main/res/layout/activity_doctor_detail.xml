<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DoctorDetail"
    android:background="#ffccff">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#ffecb3"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <TextView
            android:id="@+id/nameTVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr Faravy"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#3333ff"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Details:"
            android:textSize="23dp" />

        <TextView
                android:id="@+id/detailTvID"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="medicine"
                android:gravity="center"
                android:textColor="#3399ff"
                android:textSize="25dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Date:"
            android:textSize="23dp"
            />

        <TextView
            android:id="@+id/appointmentTvId"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#3399ff"
            android:text="12/01/19"
            android:textSize="25dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Phone:"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/phoneTvId"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#3399ff"
            android:text="01683478828"
            android:textSize="25dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Email:"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/emailTvId"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:text="drfaravy420@gmail.com"
            android:textColor="#3399ff"/>

    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


</LinearLayout>